        <Button
            android:id="@+id/b3"
            style="@style/style_za_crne_tipke"
            android:layout_marginLeft="-13dp"
            android:layout_toRightOf="@+id/p4"></Button>

        <Button
            android:id="@+id/b4"
            style="@style/style_za_crne_tipke"
            android:layout_marginLeft="-13dp"
